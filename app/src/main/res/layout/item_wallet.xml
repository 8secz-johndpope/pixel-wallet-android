<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:clipToPadding="false">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/name"
                style="@style/WalletCardWalletName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="My Account 1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="19dp">

                <TextView
                    android:id="@+id/amount"
                    style="@style/WalletCardPxlAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="485.0514"/>

                <TextView
                    style="@style/WalletCardPxl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:text="@string/pxl"
                    tools:text="PXL"/>

            </LinearLayout>

            <TextView
                style="@style/WalletCardWalletType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/network_name"
                tools:text="piction network"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="17dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/WalletCardButton"
                    android:text="@string/btn_account_address"
                    tools:text="Account Address"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_management"
                    android:theme="@style/WalletCardButton"
                    tools:text="Management"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>