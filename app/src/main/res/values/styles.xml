<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- custom -->
    <style name="WalletCardButton" parent="@style/ButtonTextCenterPictionBlue">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <!-- import -->
    <style name="SketchMeasureSpacing">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonTextCenterDisabledGray">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#61000000</item>
    </style>

    <style name="InputTextEnabledLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#767676</item>
    </style>

    <style name="ButtonTextCenterWhite">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonTextCenterPictionBlue">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/piction_blue</item>
    </style>

    <style name="InputTextEnabledAssistiveText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#767676</item>
    </style>

    <style name="InputTextEnabledPlaceholder">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/lightgray</item>
    </style>

    <style name="InputTextDisabledLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/lightgray</item>
    </style>

    <style name="InputTextFocusedAssistiveText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="InputTextFocusedLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="InputTextActiveAssistiveText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/piction_blue</item>
    </style>

    <style name="InputTextDisabledAssistiveText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/lightgray</item>
    </style>

    <style name="InputTextActiveFilledText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="InputTextErrorLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="WalletCardWalletName">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="InputTextActiveLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/piction_blue</item>
    </style>

    <style name="WalletCardPxlAmount">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="WalletCardPxl">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="WalletCardWalletType">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/lightgray</item>
    </style>

    <style name="BottomsheetTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BottomsheetDesc">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:textColor">#4a4a4a</item>
    </style>

    <style name="PinNumberTitle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PinNumberError">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="TransitDescSubtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TransitDescAddress">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/piction_blue</item>
    </style>

    <style name="TransitDescSendPxlAmount">
        <item name="android:gravity">end</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TransitDescPxl">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/lightgray</item>
    </style>

    <style name="TransitDescDescription">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TransitDescReceivedTitle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TransitDescReceivedPxlAmount">
        <item name="android:gravity">end</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/piction_blue</item>
    </style>

    <style name="TransitDescPendingPxlAmount">
        <item name="android:gravity">end</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/piction_orange</item>
    </style>

    <style name="ClipboardAddress">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/piction_blue</item>
    </style>

    <style name="TransitDescSendTitle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/piction_blue</item>
    </style>

    <style name="DialogTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#de000000</item>
    </style>

    <style name="BottomsheetSubtext">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">9sp</item>
        <item name="android:textColor">#4a4a4a</item>
    </style>

    <style name="DialogDesc">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">#99000000</item>
    </style>

    <style name="ButtonTextRightPictionBlue">
        <item name="android:gravity">end</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/piction_blue</item>
    </style>


</resources>
